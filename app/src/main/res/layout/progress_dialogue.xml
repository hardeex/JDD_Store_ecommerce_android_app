<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_dialogue"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginStart="@dimen/marginStart"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <jdd.com.ng.jddwebmaster.jddstore.code.utils.MyCustomItalicBoldTextView
        android:id="@+id/tv_progress_dialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/marginStart"
        android:layout_marginEnd="@dimen/marginEnd"
        android:text="Loading..."
        android:textSize="@dimen/defaultTextSize"
        app:layout_constraintBottom_toBottomOf="@+id/progress_dialogue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progress_dialogue"
        app:layout_constraintTop_toTopOf="@+id/progress_dialogue" />

</androidx.constraintlayout.widget.ConstraintLayout>